# Normalize line endings by default
* text=auto

# Force LF for source and config files
*.js   text eol=lf
*.cjs  text eol=lf
*.mjs  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.env* text eol=lf
*.graphql text eol=lf

# Lockfiles as LF to avoid churn on Windows
package-lock.json text eol=lf
pnpm-lock.yaml    text eol=lf
yarn.lock         text eol=lf

# Keep common binaries untouched
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.webp binary
*.avif binary
*.bmp  binary

# Fonts
*.woff  binary
*.woff2 binary
*.ttf   binary
*.otf   binary

# Media
*.mp4  binary
*.webm binary
*.mov  binary
*.wav  binary
*.mp3  binary
